<style>
  body {
    background-image: url('your-image.jpg'); /* Додайте шлях до фонового зображення */
    font-family: Arial, sans-serif;
  }
  .container {
    max-width: 600px;
    margin: 0 auto;
    padding: 30px;
    background-color: #CD853F;
    border-radius: 5px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
    position: relative;
  }
  #reloadButton {
    position: absolute;
    top: 10px;
    left: 10px;
    background-color: #964B00;
    color: white;
    border: none;
    border-radius: 50%;
    width: 30px;
    height: 30px;
    cursor: pointer;
  }
  #statusDisplay {
    margin-top: 60px; /* Змінено відступ, щоб зробити місце для кнопки перезавантаження */
    padding: 10px;
    background-color: white;
    border-radius: 5px;
    box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
  }
